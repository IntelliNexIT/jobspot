<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLanguage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.screen.account.LanguageActivity"
    android:background="@color/bg"
    android:launchMode="singleTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_back"
            app:iconGravity="start"
            app:iconPadding="0dp"
            app:iconSize="22dp"
            app:iconTint="@android:color/darker_gray"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="22sp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_prefered_language"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                app:cardCornerRadius="14dp"
                android:layout_marginTop="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/us"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/english"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:paddingTop="2dp"/>
                    </LinearLayout>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioEn"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:padding="0dp"
                        app:buttonTint="@color/custom_radio_color"
                        tools:ignore="TouchTargetSizeCheck"
                        android:clickable="false"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewKM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                app:cardCornerRadius="14dp"
                android:layout_marginTop="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/cambodia"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/khmer"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:paddingTop="2dp"/>
                    </LinearLayout>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioKM"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:padding="0dp"
                        app:buttonTint="@color/custom_radio_color"
                        tools:ignore="TouchTargetSizeCheck"
                        android:clickable="false"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                app:cardCornerRadius="14dp"
                android:layout_marginTop="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/cn"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/chinese"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:paddingTop="2dp"/>
                    </LinearLayout>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioCN"
                        android:layout_width="30dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:padding="0dp"
                        app:buttonTint="@color/custom_radio_color"
                        tools:ignore="TouchTargetSizeCheck"
                        android:clickable="false"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>