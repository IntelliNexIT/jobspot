<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About this company"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                android:layout_marginTop="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    app:srcCompat="@drawable/logo"
                    app:shapeAppearanceOverlay="@style/Circular74"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UselessLeaf"
                    android:paddingTop="4dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google inc"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="-8dp"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textIndustry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="IT Consulting and IT Solution"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="13sp"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textCompanyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            tools:ignore="RtlSymmetry,VisualLintLongText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textFollowerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="12k followers"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCompanyCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambodia"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCompanyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Phnom Penh"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCareerPostedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 jobs posted"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textHireRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="80% rate of hire"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
</LinearLayout>
