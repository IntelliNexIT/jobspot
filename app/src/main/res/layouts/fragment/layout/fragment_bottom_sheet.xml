<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="16sp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
        <com.google.android.material.button.MaterialButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:icon="@drawable/feed"
            app:iconSize="26dp"
            android:background="@drawable/ic_round"
            app:backgroundTint="@color/tp1"
            android:contentDescription="@string/new_feed_button"
            android:gravity="center"
            android:padding="10dp"
            app:iconGravity="textStart"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Feed"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

        <com.google.android.material.button.MaterialButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_round"
            app:backgroundTint="@color/tp1"
            app:icon="@drawable/career"
            app:iconSize="26dp"
            android:contentDescription="@string/new_job_button"
            android:gravity="center"
            android:padding="10dp"
            app:iconGravity="textStart"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Job"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>